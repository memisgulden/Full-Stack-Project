  <!-- Form: Create new group -->

  <div class="container">
    <div id="new-group-form" class="jumbotron">
      <div class="text-center">

        <!-- Group Name Input-->
        <center>
          <div class="row">
            <div class="form-heading">
              <i class="fas fa-utensils"></i>
              <br>Group Name
            </div>
          </div>
          <input class="form-control" id="new-group" placeholder="Enter Your Group Name">

          <!-- Submit new Group-->
          <button id="submit-new-grp" type="button" class="btn btn-link">
            <i class="fas fa-users"></i><br>Create <br> Group
          </button>
      </div>
    </div>
  </div>
  </center>
  <!-- Form: Find group -->
  <div id="groupNames">
    <div class="container">
      <div id="existing-group-form" class="jumbotron text-center">
        <!-- Group Name -->
        <center>
          <div class="form-heading">
            <i class="fas fa-utensils"></i>
            <br>Group Name</p>
          </div>
          <input class="form-control" id="existing-group" placeholder="Find Your Group Name">
          <br>
          <br>
          <!-- Find Group -->
          <button id="find-group" type="button" class="btn btn-link">
            <i class="fas fa-users"></i><br>Find <br>Group
          </button>
      </div>
    </div>
  </div>
  </div>
  </center>

  <!-- Group form: View Group & Add Restaurants -->

  <!-- Group Info Form -->
  <div id="group-form" class="row">
    <div class="col-xs-4 col-sm-offset-2 text-center">
      <div id="display-group">
        <!-- Display Group and its current restaurants -->
        <div id="group-name">
          <span id="groupName"></span>
        </div>

        <div id="user-list">
          <i class="fas fa-users"></i>
          <p id="members">Members:</p>
          <span id="userNames"></span>
        </div>

      </div>
      <br>
      <!-- Restaurant card: Div to display yelp info of picked restaurant -->
      <button id="pick-restaurant" type="button" class="btn btn-link">Pick Restaurant</button>
      <br>
      <br>
      <div id="pick-form">
        <div id="restaurantCard">
          <div id="pick-result"></div>
          <div id="wrap"> <i class="fas fa-utensils"></i>
            <div id="nameDiv"></div>
            <div id="addrDiv"></div>
            <div id="phoneDiv"></div>
            <div id="ratingDiv"></div>
            <div id="photoDiv"></div>
            <div id="websiteDiv"></div>
          </div>
        </div>
      </div>
    </div>
    <!-- Add Restaurant Form -->

    <div class="col-xs-4 text-center">
      <p id="rest-form-heading">Enter your Choice</p>
      <!-- Username -->
      <!-- Future: Set a group leader w/ admin abilities -->
      <div id="new-restaurant">
        <center>
          <p class="rest-heading">User Name</p>
          <input class="form-control one" id="username" placeholder="Name">
          <br>
          <!-- Enter Location  -->
          <p class="rest-heading">Location</p>
          <input class="form-control one" id="location" placeholder="City and State">
          <br>
          <!-- Add Restaurant field -->
          <div id="rest-list">
            <p id="rest-name" class="rest-heading">Restaurant Suggestion</p>
            <input class="form-control one" id="restaurant-name" placeholder="Enter Restaurant">
            <!-- Maybe add these to class later if we can get Loading CSS to work 'ld ld-over-full-inverse running' -->
          </div>
      </div>
      <button id="submit-pick" type="button" class="btn btn-link" data-toggle="modal" data-target="#exampleModal">Add</button>
    </div>
  </div>
  </center>
  <!-- All Groups Form -->
  <center>
    <div id="all-groups" class="row">
      <div class="col-xs-4 col-sm-offset-4 text-center">
        <!-- col-sm-offset-4 -->
        <div id="allGroups">
          <div id="allGroupsHead">All Groups</div>
          <div id="allGroupsList"></div>
        </div>
      </div>
    </div>
  </center>

